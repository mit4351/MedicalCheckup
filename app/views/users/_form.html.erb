<%= form_for(@user) do |f| %>
  <table border="1">
  <tr>
  <th><%= f.label :name, '名前' %></th>
  <td><%= f.text_field :name %></td>
  </tr>
  <tr>
  <th><%= f.label :enpno, '被保険者コード' %></th>
  <td><%= f.text_field :enpno %></td>
  </tr>
  <% if authority? %>
    <tr>
    <th><%= f.label :authority, '権限' %></th>
    <td><%= f.text_field :authority %></td>
    </tr>
    <tr>
    <th><%= f.label :authority, '権限' %></th>
    <td><%= select :page, :name, [["管理者", "1"], ["一般", "2"]] %></td>
    </tr>
    <tr>
    <th><%= f.label :authority, '権限' %></th>
    <td><%= select_tag 'note[point]', options_for_select(["1", "2", "3", "4", "5"]) %></td>
    </tr>
  <% end %>
  <tr>
  <th><%= f.label :password, 'パスワード' %></th>
  <td><%= f.password_field :password %></td>
  </tr>
  <tr>
  <th><%= f.label :password_confirmation, '確認' %></th>
  <td><%= f.password_field :password_confirmation %></td>
  </tr>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
