<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Dayoftheweek</th>
      <th>Tel</th>
      <th>Zipcode</th>
      <th>Address</th>
      <th>Jcbflg</th>
      <th>Remarks</th>
      <th>Deleteflg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.number %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.dayoftheweek %></td>
        <td><%= hospital.tel %></td>
        <td><%= hospital.zipcode %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.jcbflg %></td>
        <td><%= hospital.remarks %></td>
        <td><%= hospital.deleteflg %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

